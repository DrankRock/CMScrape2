{
    "name": "cardmarket-scraper",
    "version": "1.1.0",
    "description": "CardMarket scraper with Ulixee Hero",
    "main": "src/main.js",
    "scripts": {
        "start": "electron .",
        "dev": "electron . --dev",
        "build": "electron-builder",
        "postinstall": "electron-builder install-app-deps"
    },
    "keywords": [
        "cardmarket",
        "scraper",
        "electron"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "electron": "^33.0.0",
        "electron-builder": "24.13.3"
    },
    "dependencies": {
        "@ulixee/cloud": "^2.0.0-alpha.29",
        "@ulixee/hero": "^2.0.0-alpha.29",
        "jsdom": "^25.0.0"
    },
    "build": {
        "appId": "com.cardmarket.scraper",
        "asar": true,
        "win": {
            "target": "nsis",
            "icon": "build/icon.ico"
        },
        "extraResources": [
            {
                "from": "local-browser",
                "to": "ulixee-browser"
            }
        ]
    }
}